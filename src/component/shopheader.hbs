{{#with text}}
<div class="card">
    <ul class="nav">
        <li class="nav-item col-4">
            <p class="nav-link disabled">Shop</p>
        </li>

        {{#each links}}
            {{#if href includeZero=false}}
                <li class="nav-link">
                    <a href={{href}}>{{text}}</a>
                </li>
                {{else}}
                <li class="nav-link disabled">{{text}}</li>

            {{/if}}

        {{/each}}
            <li class="nav-item">
                <a href="#" class="nav-link  disabled">Disabled</a>
            </li>
    </ul>

</div>
{{/with}}

