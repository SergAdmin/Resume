<main>
    <section class="row">

        <div class="col-8">
            {{#with formBlock}}
            <h2>{{header}}</h2>
            {{#with rating}}
            <p>{{title}} {{value}}</p>
            {{/with}}

       
            {{#with actionBlock}}

            <ul class="nav nav-tabs row">
                {{#each tabs}}
                {{#if @last}}
                <li class="nav-link col-4 active">{{text}}</li>
                {{else}}
                <li class="nav-link col-4">{{text}}</li>
                {{/if}}
                {{/each}}
            </ul>
            <hr class="mt-5 mb-5">
            {{#with report}}
            <div class="card p-2">
                <p>{{title}}</p>
                {{#with button}}
                <div>
                    <a href={{link}} class="btn btn-secondary">{{text}}</a>
                </div>
                {{/with}}
            </div>
            {{/with}}

            {{/with}}
            <hr class="mt-5 mb-3">
            {{#with feedbackBlock}}
            <h3>{{title}}</h3>
            <div class="row m-1">
                {{#each buttons}}
                <div class="col-4 text-left">
                    {{#if isWarning}}
                    <a href={{link}} class="btn btn-warning text-light">{{text}}</a>
                    {{/if}}
                    {{#if isSuccess}}
                    <a href={{link}} class="btn btn-success">{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                    <a href={{link}} class="btn btn-danger">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card mb-2">
                <img src={{photo}} class="p-4 me-5">
                <b class="m-3">{{name}}</b>
            </div>
            <div class="card mb-2 p-2">
                <p>{{price}}</p>

                {{#if inMarket}}
                <p>Є в наявності</p>
                {{/if}}

                <div class="row m-1">
                    {{#each buttons}}
                    <div class="text-left mb-2">
                        {{#if isPrimary}}
                        <a href={{link}} class="btn btn-primary">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a href={{link}} class="btn btn-secondary">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="card p-2">
                {{#with seller}}
                {{title}}: {{value}}
                {{/with}}
            </div>
            {{/with}}

        </div>

        {{/with}}

        <hr class="m-4">

        {{> reviewItem reviewList=reviewList}}

    </section>
</main>