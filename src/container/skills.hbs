<div>
	<main>
		<section>
			{{> title big=true data="All skills" }}
			<ul>
				{{#each main.skills}}
				<li>
					{{name}}
					{{#if point includeZero=true}}
					({{point}})
					{{/if}}
					{{#if isTop}} (TOP) {{/if}}
					{{#unless point includeZero=true}}
					(не вивчаємо)
					{{/unless}}
					{{#unless point}}
					{{#if point includeZero=true}}
					(зараз вивчаємо)
					{{/if}}
					{{/unless}}
				</li>
				{{/each}}
			</ul>
		</section>
		<section>
			{{> title big=false data="My hobbies" }}
			<ol>
				{{#each main.hobbies}}
				<li>
					{{name}}
					{{#if isMain}}(favourite){{/if}}
				</li>
				{{/each}}
			</ol>
		</section>


	</main>

</div>