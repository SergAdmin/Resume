<div>
	{{#with main}}
	<main>

		<section>
			{{> title data=title big=true }}

			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>

						<div>{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працюю)
							{{/if}}
						</div>

						<br>

						<div>
							{{#if company.url}}
							{{> link text = company.name href = company.url blank = true noLine=true }}
							{{else}}
							<b>{{company.name}}</b>
							{{/if}}
						</div>

						<br>

						<div> {{#if projectAmmount}}
							<strong> Projects: ({{projectAmmount}})</strong>
							{{/if}}
						</div>

						<br>

						<ul>
							{{#each projects}}
							<li>
								<div>{{> link text=name href=url blank=true noLine=true }}</div>
								<br>
								<div>
									<p>{{about}}</p>
								</div>
								<br>
								<div><em>“Project stacks” - ({{../stackAmmount}})</em></div>
								<br>
								<div>
									<ul>
										{{#each stacks}}
										<li>{{name}}</li>
										{{/each}}
									</ul>
								</div>
								<br>
								<div><em>“Project awards”</em></div>
								<br>
								<div>
									<ul>
										{{#each ../awards}}
										<li>{{name}}</li>
										{{/each}}
									</ul>
								</div>

							</li>
							{{/each}}
						</ul>
						<br>
					</li>

					{{/each}}
				</ul>

			</div>

		</section>


	</main>
	{{/with}}
</div>